{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
    "name": "shopxpert/side-mini-cart",
    "category": "shopxpert-blocks",
    "title": "WL: Mini Cart",
    "description":"Display cart item for side mini cart.",
    "keywords": ["shopxpert","cart","side mini cart","mini cart"],
    "render": "file:./index.php",
    "attributes": {
        "blockUniqId":{
            "type": "string",
            "default": ""
        },
        "areaPadding": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{SHOPXPERT_WRAPPER}} { padding: {{areaPadding}}; }"
            }
        },
        "areaBGProperty":{
            "type": "object",
            "default": {
                "imageId": null,
                "imageUrl":"",
                "position": "",
                "attachment": "",
                "repeat": "",
                "size": ""
            },
            "style" : {
                "selector":"{{SHOPXPERT_WRAPPER}}"
            }
        },

        "content_type":{
            "type":"string",
            "default":"header"
        },

        "header_title":{
            "type":"string",
            "default":"Your Cart"
        },
        "cross_icon":{
            "type":"string",
            "default":"fa fa-times"
        },

        "footer_sub_total":{
            "type":"string",
            "default":"Sub Total"
        },
        "cart_btn_txt":{
            "type":"string",
            "default":"View Cart"
        },
        "checkout_btn_txt":{
            "type":"string",
            "default":"Checkout"
        },
        "footer_empty_text":{
            "type":"string",
            "default":"Your Cart Is Empty"
        },

        "titleColor":{
            "type":"string",
            "style" : {
                "selector":"{{SHOPXPERT_WRAPPER}} .shopxpert_mini_cart_header h2{ color:{{titleColor}}!important; }",
                "dependency": [
                    [
                        {
                            "key": "content_type", 
                            "condition": "==", 
                            "value": "header"
                        }
                    ]
                ]
            }
        },
        "titleSize":{
            "type":"string",
            "style" : {
                "selector":"{{SHOPXPERT_WRAPPER}} .shopxpert_mini_cart_header h2{ font-size:{{titleSize}}!important; }",
                "dependency": [
                    [
                        {
                            "key": "content_type", 
                            "condition": "==", 
                            "value": "header"
                        }
                    ]
                ]
            }
        },
        "titleMargin": {
            "type": "object",
            "style" : {
                "selector":"{{SHOPXPERT_WRAPPER}} .shopxpert_mini_cart_header h2{ margin:{{titleMargin}}!important; }",
