                "selector":"{{SHOPXPERT_WRAPPER}} .shopxpert_mini_cart_close i{ color:{{crossIconColor}}; }",
                "dependency": [
                    [
                        {
                            "key": "content_type", 
                            "condition": "==", 
                            "value": "header"
                        }
