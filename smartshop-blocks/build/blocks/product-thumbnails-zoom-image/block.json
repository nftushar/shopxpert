{
  "apiVersion": 2,
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "name": "shopxpert/product-thumbnails-zoom-image",
  "category": "shopxpert-single-product",
  "title": "WL: Product Image With Zoom",
  "description": "Display Product Image with zoom for product details page.",
  "keywords": [
    "shopxpert",
    "product",
    "single",
    "zoom",
    "gallery",
    "product image zooom",
    "single product zoom"
  ],
  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} { padding: {{areaPadding}}; }"
      }
    },
    "areaBGProperty": {
      "type": "object",
      "default": {
        "imageId": null,
        "imageUrl": "",
        "position": "",
        "attachment": "",
        "repeat": "",
        "size": ""
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}}"
      }
    },
    "thumbnailsSliderItems": {
      "type": "number",
      "default": 4
    },
    "tabsliderActiveThumbBorderColor": {
      "type": "string",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-thumbs .slick-current img{ border-color:{{tabsliderActiveThumbBorderColor}}!important; }"
      }
    },
    "productThubImageBorder": {
      "type": "object",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-thumbs .sm-image img"
      }
    },
    "productThubImageBorderRadius": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-thumbs img{ border-radius:{{productThubImageBorderRadius}}; }"
      }
    },
    "productImageArePadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-thumbs .sm-image{ padding:{{productImageArePadding}}; }"
      }
    },
    "tabsliderArrowColor": {
      "type": "string",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-thumbs .slick-arrow,{{SHOPXPERT_WRAPPER}} .wl-product-details-images .slick-arrow{ color:{{tabsliderArrowColor}}; }"
      }
    },
    "productImageBorder": {
      "type": "object",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-images"
      }
    },
    "productImageBorderRadius": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-images,{{SHOPXPERT_WRAPPER}} .wl-product-details-images img{ border-radius:{{productImageBorderRadius}}; }"
      }
    },
    "productImageAreaMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-images{ margin:{{productImageAreaMargin}}; }"
      }
    },
    "productImageAreaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .wl-product-details-images{ padding:{{productImageAreaPadding}}; }"
      }
    }
  }
}