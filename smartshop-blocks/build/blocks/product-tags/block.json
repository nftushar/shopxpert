{
  "apiVersion": 2,
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "name": "shopxpert/product-tags",
  "category": "shopxpert-single-product",
  "title": "WL: Product Tags",
  "description": "Display product tags for single product page.",
  "keywords": [
    "shopxpert",
    "product",
    "single",
    "tags",
    "product tags"
  ],
  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} { padding: {{areaPadding}}; }"
      }
    },
    "areaMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} { padding: {{areaMargin}}; }"
      }
    },
    "areaBGProperty": {
      "type": "object",
      "default": {
        "imageId": null,
        "imageUrl": "",
        "position": "",
        "attachment": "",
        "repeat": "",
        "size": ""
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}}"
      }
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "contentAlignment": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} { text-align: {{contentAlignment}} !important; }"
      }
    },
    "contentSize": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SMARTSHOP_WRAPPER}} .shopxpert_product_tags_info{ font-size:{{contentSize}}; }"
      }
    },
    "titleColor": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SMARTSHOP_WRAPPER}} .shopxpert_product_tags_info .tags-title{ color:{{titleColor}}; }"
      }
    },
    "valueColor": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SMARTSHOP_WRAPPER}} .shopxpert_product_tags_info .tagged_as,.woocommerce {{SMARTSHOP_WRAPPER}} .shopxpert_product_tags_info .tagged_as a{ color:{{valueColor}}; }"
      }
    },
    "valueHoverColor": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SMARTSHOP_WRAPPER}} .shopxpert_product_tags_info .tagged_as a:hover{ color:{{valueHoverColor}}; }"
      }
    },
    "tagSpacing": {
      "type": "number",
      "style": {
        "selector": ".woocommerce {{SMARTSHOP_WRAPPER}} .shopxpert_product_tags_info .tagged_as a:first-child{ margin-left:{{tagSpacing}}px; }"
      }
    }
  },
  "example": {
    "attributes": {
      "showTitle": true
    }
  }
}