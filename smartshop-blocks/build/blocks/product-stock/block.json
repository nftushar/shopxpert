{
  "name": "shopxpert/product-stock",
  "category": "shopxpert-single-product",
  "title": "Product Stock",
  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} { padding: {{areaPadding}}; }"
      }
    },
    "areaBGProperty": {
      "type": "object",
      "default": {
        "imageId": null,
        "imageUrl": "",
        "position": "",
        "attachment": "",
        "repeat": "",
        "size": ""
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}}"
      }
    },
    "textColor": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SHOPXPERT_WRAPPER}} [class^='stock']{ color: {{textColor}}!important; }"
      }
    },
    "textSize": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SHOPXPERT_WRAPPER}} [class^='stock']{ font-size: {{textSize}}!important; }"
      }
    },
    "contentAlignment": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SHOPXPERT_WRAPPER}}.product_stock_status { text-align: {{contentAlignment}}; } .woocommerce {{SHOPXPERT_WRAPPER}}.product_stock_status > p{display:inline-block;}"
      }
    }
  }
}