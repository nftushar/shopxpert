{
  "name": "shopxpert/product-rating",
  "category": "shopxpert-single-product",
  "title": "WL : Rating",
  "description": "Display product rating.",
  "keywords": [
    "shopxpert",
    "rating",
    "product review",
    "product rating"
  ],
  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} { padding: {{areaPadding}}; }"
      }
    },
    "areaMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} { margin: {{areaMargin}}; }"
      }
    },
    "areaBGProperty": {
      "type": "object",
      "default": {
        "imageId": null,
        "imageUrl": "",
        "position": "",
        "attachment": "",
        "repeat": "",
        "size": ""
      },
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}}"
      }
    },
    "ratingColor": {
      "type": "string",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} .star-rating,{{SHOPXPERT_WRAPPER}} .star-rating::before, {{SHOPXPERT_WRAPPER}} .woocommerce-product-rating,{{SHOPXPERT_WRAPPER}} .woocommerce-product-rating::before{ color: {{ratingColor}} !important; }"
      }
    },
    "linkColor": {
      "type": "string",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} a.woocommerce-review-link{ color: {{linkColor}} !important; }"
      }
    },
    "linkSize": {
      "type": "string",
      "style": {
        "selector": "{{SHOPXPERT_WRAPPER}} a.woocommerce-review-link{ font-size: {{linkSize}} !important; }"
      }
    },
    "contentAlignment": {
      "type": "string",
      "style": {
        "selector": ".woocommerce {{SHOPXPERT_WRAPPER}} .woocommerce-product-rating { text-align: {{contentAlignment}} !important;line-height:1; } .woocommerce {{SHOPXPERT_WRAPPER}} .woocommerce-product-rating .star-rating{ display:inline-block;float:none;margin-top:0;text-align:left }"
      }
    }
  }
}