{
  "name": "smartshop/product-title",
  "category": "smartshop-single-product",
  "title": "WL : Product Title",
  "description": "Display product title.",
  "keywords": [
    "smartshop",
    "product",
    "title",
    "product title"
  ],
  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "device": "desktop"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} { padding: {{areaPadding}} !important; }"
      }
    },
    "areaBGProperty": {
      "type": "object",
      "default": {
        "imageId": null,
        "imageUrl": "",
        "position": "",
        "attachment": "",
        "repeat": "",
        "size": ""
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}}"
      }
    },
    "titleTag": {
      "type": "string",
      "default": "h2"
    },
    "titleColor": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}}.product_title { color: {{titleColor}} !important; }"
      }
    },
    "titleSize": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}}.product_title { font-size: {{titleSize}} !important; }"
      }
    },
    "titleAlignment": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}}.product_title { text-align: {{titleAlignment}} !important; }"
      }
    },
    "titleMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}}.product_title { margin: {{titleMargin}} !important; }"
      }
    }
  }
}