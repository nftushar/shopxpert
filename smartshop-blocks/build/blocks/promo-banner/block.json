{
  "name": "smartshop/promo-banner",
  "category": "smartshop-blocks",
  "title": "WL : Promo Banner",
  "description": "Display promo banner.",
  "keywords": [
    "smartshop",
    "product banner",
    "woocommerce promo",
    "promo banner"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "blockUniqId": {
      "type": "string",
      "default": ""
    },
    "style": {
      "type": "string",
      "default": "1"
    },
    "contentAlignment": {
      "type": "string",
      "default": "left"
    },
    "areaBackground": {
      "type": "string",
      "default": "",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner{ background-color: {{areaBackground}}; }"
      }
    },
    "areaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner { padding: {{areaPadding}}; }"
      }
    },
    "areaMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner { margin: {{areaMargin}}; }"
      }
    },
    "title": {
      "type": "string",
      "default": "",
      "selector": ".banner_title"
    },
    "subTitle": {
      "type": "string",
      "default": "",
      "selector": ".banner_subtitle"
    },
    "imgId": {
      "type": "number"
    },
    "imgUrl": {
      "type": "string",
      "source": "attribute",
      "attribute": "src",
      "selector": "img"
    },
    "buttonUrl": {
      "type": "string",
      "source": "attribute",
      "selector": "a",
      "attribute": "href"
    },
    "buttonText": {
      "type": "string",
      "source": "html",
      "selector": "a"
    },
    "linkTarget": {
      "type": "string",
      "source": "attribute",
      "selector": "a",
      "attribute": "target"
    },
    "titleColor": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_title { color: {{titleColor}}; }"
      }
    },
    "titleSize": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_title { font-size: {{titleSize}}; }"
      }
    },
    "titlePadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_title { padding: {{titlePadding}}; }"
      }
    },
    "titleMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_title { margin: {{titleMargin}}; }"
      }
    },
    "subTitleColor": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_subtitle { color: {{subTitleColor}}; }"
      }
    },
    "subTitleSize": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_subtitle { font-size: {{subTitleSize}}; }"
      }
    },
    "subTitlePadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_subtitle { padding: {{subTitlePadding}}; }"
      }
    },
    "subTitleMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_subtitle { margin: {{subTitleMargin}}; }"
      }
    },
    "buttonColor": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_button{ color: {{buttonColor}}; border-color: {{buttonColor}}; }"
      }
    },
    "buttonSize": {
      "type": "string",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_button{ font-size: {{buttonSize}}; }"
      }
    },
    "buttonPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_button { padding: {{buttonPadding}}; }"
      }
    },
    "buttonMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner .banner_button { margin: {{buttonMargin}}; }"
      }
    },
    "imageBorder": {
      "type": "object",
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-img img"
      }
    },
    "imageBorderRadius": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-img img{ border-radius: {{imageBorderRadius}}; }"
      }
    },
    "contentAreaWidth": {
      "type": "number",
      "style": {
        "dependency": [
          [
            {
              "key": "style",
              "condition": "==",
              "value": "2"
            }
          ]
        ],
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-layout-2 .smartshop-content{ width: {{contentAreaWidth}}px; }"
      }
    },
    "contentAreaBGColor": {
      "type": "string",
      "style": {
        "dependency": [
          [
            {
              "key": "style",
              "condition": "==",
              "value": "2"
            }
          ]
        ],
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-layout-2 .smartshop-content{ background-color: {{contentAreaBGColor}}; }"
      }
    },
    "contentAreaPadding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "dependency": [
          [
            {
              "key": "style",
              "condition": "==",
              "value": "2"
            }
          ]
        ],
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-layout-2 .smartshop-content{ padding: {{contentAreaPadding}}; }"
      }
    },
    "contentAreaMargin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "dependency": [
          [
            {
              "key": "style",
              "condition": "==",
              "value": "2"
            }
          ]
        ],
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-layout-2 .smartshop-content { margin: {{contentAreaMargin}}; }"
      }
    },
    "contentAreaBorder": {
      "type": "object",
      "style": {
        "dependency": [
          [
            {
              "key": "style",
              "condition": "==",
              "value": "2"
            }
          ]
        ],
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-layout-2 .smartshop-content"
      }
    },
    "contentBorderRadius": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "dependency": [
          [
            {
              "key": "style",
              "condition": "==",
              "value": "2"
            }
          ]
        ],
        "selector": "{{SMARTSHOP_WRAPPER}} .smartshop-banner-layout-2 .smartshop-content{ border-radius: {{contentBorderRadius}}; }"
      }
    }
  }
}